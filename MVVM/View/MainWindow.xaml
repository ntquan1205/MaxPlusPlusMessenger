<Window x:Class="MaxPlusPlusMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxPlusPlusMessenger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <DockPanel>
            <TextBox Height="25" DockPanel.Dock="Top" />
            <Button Height="25" DockPanel.Dock="Top" Content="Content" />
            <ListView/>
        </DockPanel>

        <StackPanel Grid.Column="1">
            <ListView Height="380"/>

            <StackPanel Orientation="Horizontal">
                <TextBox Height="55" Width="530" VerticalContentAlignment="Center"/>
                <Button Width="70" Content="Send"/>
            </StackPanel> 
        </StackPanel>

    </Grid>
</Window>
